package com.example.retdetails.Controller;

import java.util.List;
import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.DeleteMapping;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.PutMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.example.retdetails.Model.RetdetailClass;
import com.example.retdetails.service.retdetailsService;

@RestController
@RequestMapping("/api")
public class RetController {
	@Autowired
   private retdetailsService service;
	@GetMapping
	public List<RetdetailClass> read()
	{
		return service.getRetdetailClasses();
	}
	@GetMapping("/{sno}")
	public Optional<RetdetailClass> readbyid(@PathVariable int sno)
	{
		return service.getRetdetailClass(sno);
		
	}
	@PostMapping
	public RetdetailClass create(@RequestBody RetdetailClass det) {
		return service.addRetdetailClass(det);
	}
	@PutMapping("/{sno}")
	public RetdetailClass updateClass(@RequestBody RetdetailClass det,@PathVariable int sno) {
		
		return service.editRetdetailClass(det, sno);
		
	}
	@DeleteMapping("/{sno}")
	public String delete(@PathVariable int sno)
	{
		return service.deleteRetdetailClass(sno);
	}
	

}
